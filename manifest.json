{
  "name": "Arxiv Tools",
  "version": "0.2.9",
  "manifest_version": 2,
  "description": "Record papers you read, enhance Arxiv with direct download, Markdown link, BibTex citation and more!",
  "homepage_url": "https://github.com/vict0rsch/ArxivTools",
  "icons": {
    "64": "icons/1571249796.ico",
    "128": "icons/favicon-128.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "background": {
    "scripts": [
      "src/shared/jquery.min.js",
      "src/shared/utils.min.js",
      "src/bg/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icons/1571249796.ico",
    "default_title": "ArxivTools",
    "default_popup": "src/popup/popup.min.html"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+E"
      }
    }
  },
  "permissions": [
    "https://arxiv.org/*",
    "https://export.arxiv.org/*",
    "https://proceedings.neurips.cc/*",
    "https://openaccess.thecvf.com/*",
    "tabs",
    "activeTab",
    "storage",
    "unlimitedStorage",
    "downloads"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://arxiv.org/*",
        "*://*.arxiv-vanity.com/*",
        "*://proceedings.neurips.cc/*",
        "*://openaccess.thecvf.com/*"
      ],
      "run_at": "document_start",
      "js": [
        "src/shared/jquery.min.js",
        "src/shared/utils.min.js",
        "src/content_scripts/content_script.js"
      ],
      "css": [
        "src/content_scripts/downloadButton.css",
        "src/content_scripts/loader.css",
        "src/content_scripts/content_script.css"
      ]
    }
  ]
}